<ul>
  <li <% if current_page.path.start_with?("features") then concat 'class="active"' end %>>
    <%= link_to 'Features', '/features' %>
  </li>
  <li>
    <%= link_to 'Blog', 'http://blog.codio.com' %>
  </li>
  <li <% if current_page.path.start_with?("docs") then concat 'class="active"' end %>>
    <%= link_to 'Help', '/docs' %>
  </li>
  <li <% if current_page.path.start_with?("pricing") then concat 'class="active"' end %>>
    <%= link_to(
      'Pricing',
      (defined?(pricing) && !pricing.nil? ? "/pricing?type=#{pricing}" : '/pricing')
    ) %>
  </li>
  <li>
    <%= link_to 'Log in', '/p/login' %>
  </li>
  <li>
    <%= link_to 'Free trial', (defined?(surl) && !surl.nil? ? surl : '/p/signup'), class: 'button' %>
  </li>
</ul>
